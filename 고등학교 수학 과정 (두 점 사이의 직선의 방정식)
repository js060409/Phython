import string
import turtle as t
t.shape("turtle")

x1 = t.textinput("첫번째 점의 x 좌표:")
y1 = t.textinput("첫번쨰 점의 y 좌표:")
x2 = t.textinput("두번쨰 점의 x 좌표:")
y2 = t.textinput("두번째 점의 y 좌표:")

t.penup()
t.goto(x1,y1)
t.goto(x2,y2)

straight_line =  (y)=(y2-y1/x2-x1)*(x-x1)+y1 #두 점 사이의 직선의 방적식 공식

t.write('두 점','('x1,y1')과','('x2,y2')','의 직선의 방적식:',straight_line)
